publisher = {Elsevier B.V},
title = {{SUNDS probabilistic human health risk assessment methodology and its application to organic pigment used in the automotive industry}},
url = {https://doi.org/10.1016/j.impact.2018.12.001 https://linkinghub.elsevier.com/retrieve/pii/S2452074818301101},
volume = {13},
