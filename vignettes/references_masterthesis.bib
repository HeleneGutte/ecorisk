file = {:Users/helene/Desktop/Uni/Master{\_}thesis/Literature/ecological RA/Fu et al 2018{\_}Risky business.pdf:pdf},
issn = {03043800},
journal = {Ecological Modelling},
keywords = {Combined effect,Fishing,Marine ecosystem,Meta-analysis,Multiple drivers,Synergism},
month = {jan},
