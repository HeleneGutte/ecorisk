journal = {Journal of Wind Engineering and Industrial Aerodynamics},
keywords = {Damage,Hurricanes,Insurance,Risk assesment,Vulnerability,Wind},
month = {mar},
number = {4},
pages = {455--467},
title = {{Vulnerability of buildings to windstorms and insurance loss estimation}},
