doi = {10.3354/meps10539},
file = {:Users/helene/Desktop/Uni/Master{\_}thesis/Literature/need to sort/Tett et al 2013{\_}Framework for understanding{\_}MEPS.pdf:pdf},
issn = {0171-8630},
