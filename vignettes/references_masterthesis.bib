keywords = {Alternative dynamics,Condition,Ecological threshold,Ecosystem-based fisheries management,Herring,Hydro-climate,Inter-specific densitydependence,Sprat,WAA,Weight-at-age},
month = {aug},
pages = {241--252},
title = {{Linking fisheries, trophic interactions and climate: threshold dynamics drive herring Clupea harengus growth in the central Baltic Sea}},
