issn = {0171-8630},
journal = {Marine Ecology Progress Series},
keywords = {Continuous plankton recorder survey,Monitoring,Pelagic ecosystems,Plankton},
pages = {69--81},
title = {{Monitoring marine plankton ecosystems. I: Description of an ecosystem approach based on plankton indicators}},
