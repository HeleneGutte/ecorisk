doi = {10.1017/S0022149X17000025},
file = {:Users/helene/Desktop/Uni/Master{\_}thesis/Literature/Baltic{\_}Sea/Zuo{\_}et{\_}al{\_}2016.pdf:pdf},
issn = {14752697},
journal = {Journal of Helminthology},
number = {1},
