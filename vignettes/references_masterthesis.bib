keywords = {Baltic Sea,GPS phone tag,Habitat preference,Halichoerus grypus,Home range,Seal-fishery overlap,Trap-net fishery},
number = {Read 2008},
pages = {297--308},
title = {{Using movement data of Baltic grey seals to examine foraging-site fidelity: Implications for seal-fishery conflict mitigation}},
