doi = {10.1111/j.1365-2664.2008.01488.x},
file = {:Users/helene/Desktop/Uni/Master{\_}thesis/Literature/need to sort/Climate change and deepening of the North Sea fish assemblage- a biotic indicator of warming seas.pdf:pdf},
issn = {00218901},
journal = {Journal of Applied Ecology},
keywords = {Climate change,Habitat loss,Invasive species,Life-history trait,North Sea,Regime shift,Thermal preference},
month = {aug},
number = {4},
pages = {1029--1039},
title = {{Climate change and deepening of the North Sea fish assemblage: a biotic indicator of warming seas}},
