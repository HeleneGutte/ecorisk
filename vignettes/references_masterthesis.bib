journal = {Natural Hazards},
keywords = {Community vulnerability,Emergency management,Mitigation,Natural disasters,Resilience,Risk assessment,Technological disasters},
pages = {271--290},
title = {{Hazards risk assessment methodology for emergency managers: A standardized framework for application}},
volume = {28},
year = {2003}
}
